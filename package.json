{
  "name": "ZTools",
  "version": "1.1.9",
  "description": "一个高性能、可扩展的应用启动器和插件平台",
  "main": "./out/main/index.js",
  "author": "lzx8589561",
  "homepage": "https://github.com/ZToolsCenter/ZTools",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZToolsCenter/ZTools.git"
  },
  "bugs": {
    "url": "https://github.com/ZToolsCenter/ZTools/issues"
  },
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm typecheck:node && pnpm typecheck:web",
    "start": "node -e \"if (process.platform === 'win32') require('child_process').execSync('chcp 65001 >nul 2>&1', {stdio: 'ignore'})\" && electron-vite preview",
    "dev": "node -e \"if (process.platform === 'win32') require('child_process').execSync('chcp 65001 >nul 2>&1', {stdio: 'ignore'})\" && electron-vite dev",
    "dev:setting": "cd internal-plugins/setting && pnpm dev",
    "dev:all": "concurrently -n \"main,setting\" -c \"blue,green\" \"pnpm dev\" \"pnpm dev:setting\"",
    "kill": "pkill -9 Electron",
    "dev:clean": "pnpm kill && pnpm dev",
    "build": "pnpm typecheck && pnpm build:setting && electron-vite build",
    "build:setting": "cd internal-plugins/setting && pnpm build",
    "build:unpack": "pnpm build && electron-builder --dir",
    "build:win": "pnpm build && electron-builder --win",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:mac:update": "pnpm build && electron-builder --mac --dir",
    "build:linux": "pnpm build && electron-builder --linux",
    "sync-api-types": "node scripts/sync-api-types.js",
    "check-api-types": "node -p \"require('./ztools-api-types/package.json')['utools-version']\""
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3",
    "electron-log": "^5.4.3",
    "extract-file-icon": "^0.3.2",
    "fuse.js": "^7.0.0",
    "lmdb": "^3.4.4",
    "marked": "^17.0.1",
    "pinia": "^3.0.4",
    "pinyin-pro": "^3.24.2",
    "simple-plist": "^1.3.1",
    "uuid": "^13.0.0",
    "vuedraggable": "^4.1.0",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.18.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.1.2",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.4.0",
    "node-gyp": "^12.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "extract-file-icon",
      "lmdb",
      "msgpackr-extract"
    ]
  }
}
