{
  "name": "ztools",
  "version": "1.1.0",
  "description": "一个高性能、可扩展的应用启动器和插件平台",
  "main": "./out/main/index.js",
  "author": "lzx8589561",
  "homepage": "https://github.com/lzx8589561/ZTools",
  "repository": {
    "type": "git",
    "url": "https://github.com/lzx8589561/ZTools.git"
  },
  "bugs": {
    "url": "https://github.com/lzx8589561/ZTools/issues"
  },
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "kill": "pkill -9 Electron",
    "dev:clean": "npm run kill && npm run dev",
    "build": "npm run typecheck && electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac:update": "npm run build && electron-builder --mac --dir",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3",
    "extract-file-icon": "^0.3.2",
    "fuse.js": "^7.0.0",
    "lmdb": "^3.4.4",
    "pinia": "^3.0.4",
    "pinyin-pro": "^3.24.2",
    "simple-plist": "^1.3.1",
    "uuid": "^13.0.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.18.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.7"
  }
}
